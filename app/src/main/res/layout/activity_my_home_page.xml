<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyHomePage"
    android:background="@mipmap/bg2">

    <Button
        android:id="@+id/btnAddLabel"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Add Music"
        android:backgroundTint="@color/av_red"
        android:fontFamily="@font/bevan"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btnPlayList"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="My PlayList"
        android:backgroundTint="@color/av_red"
        android:fontFamily="@font/bevan"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnAddLabel"
        app:layout_constraintStart_toStartOf="@+id/btnAddLabel"
        app:layout_constraintTop_toBottomOf="@+id/btnAddLabel" />

    <Button
        android:id="@+id/btnRandomPlay"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Random Play"
        android:backgroundTint="@color/av_red"
        android:fontFamily="@font/bevan"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnPlayList"
        app:layout_constraintStart_toStartOf="@+id/btnPlayList"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayList" />

</androidx.constraintlayout.widget.ConstraintLayout>